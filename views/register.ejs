  <div class="container">
    <h1>Register for Government Benefits</h1>
    <form id="applicantForm" method="post" action="/apply">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" required>

      <label for="birthday">Date of Birth:</label>
      <input type="date" id="birthday" name="birthday" required>

      <label for="gender">Gender</label>
      <select id="gender" name="gender" required>
        <option value="" disabled selected>Select gender</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>

      <label for="phone">Phone Number</label>
      <input type="tel" id="phone" name="phone" required>

      <label for="state">Select State:</label>
      <select id="stateDropdown" name="state" required>
        <option value="" disabled selected>Select State</option>
      </select>

      <label for="lga">Select LGA:</label>
      <select id="lgaDropdown" name="LGA" disabled required>
          <option value="" disabled selected>Select LGA</option>
      </select>


      <label for="ward">Select Ward:</label>
      <select id="wardDropdown" name="ward" disabled required>
        <option value="" disabled selected>Select Ward</option>
      </select>

      <label for="vin">Voter's Identification Number</label>
      <input type="text" id="vin" name="vin" required>

      <label for="bvn">BVN</label>
      <input type="text" id="bvn" name="bvn" required minlength="11" maxlength="11">

      <label for="nin">NIN</label>
      <input type="text" id="nin" name="nin" required minlength="11" maxlength="11">
      <label for="bankName">Bank Name</label>
      <input type="text" id="bankName" name="bankDetails[bankName]" required>
      
      <label for="accountNumber">Bank Account Number</label>
      <input type="text" id="accountNumber" name="bankDetails[accountNumber]" required minlength="10" maxlength="10">
      <button type="submit">Submit</button>
    </form>
  </div>

