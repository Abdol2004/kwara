  <script src="/js/script.js"></script>
  <script>
   $(document).ready(function() {
    // Load states on page load
    $.get('/api/getStates', function(response) {
        console.log(response); // Check the fetched states
        response.states.forEach(function(state) {
            $('#stateDropdown').append(new Option(state.stateName, state.stateName)); // Use state.stateName for the value
        });
    }).fail(function(xhr) {
        console.error(xhr.responseJSON.msg); // Log any error response
    });

    $('#stateDropdown').change(function() {
        const selectedState = $(this).val();
        $('#lgaDropdown').prop('disabled', !selectedState);
        $('#lgaDropdown').empty().append(new Option('Select LGA', '')); // Clear previous options

        if (selectedState) {
            $.get(`/api/getLGAs/${selectedState}`, function(response) {
                if (response.LGAs && response.LGAs.length) {
                    response.LGAs.forEach(function(lga) {
                        $('#lgaDropdown').append(new Option(lga.lgaName, lga.lgaName));
                    });
                } else {
                    $('#lgaDropdown').append(new Option('No LGAs available', ''));
                }
            }).fail(function(xhr) {
                console.error('Error loading LGAs:', xhr); // Log the error response
                $('#lgaDropdown').append(new Option('Error loading LGAs', ''));
            });
        }
    });

    // Load wards based on selected LGA
    $('#lgaDropdown').change(function() {
        const selectedLGA = $(this).val();
        $('#wardDropdown').prop('disabled', !selectedLGA);
        $('#wardDropdown').empty().append(new Option('Select Ward', '')); // Clear previous options

        if (selectedLGA) {
            $.get(`/api/getWards/${selectedLGA}`, function(response) {
                if (response.wards && response.wards.length) {
                    response.wards.forEach(function(ward) {
                        $('#wardDropdown').append(new Option(ward, ward)); // Assuming ward is a string
                    });
                } else {
                    $('#wardDropdown').append(new Option('No Wards available', ''));
                }
            }).fail(function(xhr) {
                console.error('Error loading Wards:', xhr); // Log the error response
                $('#wardDropdown').append(new Option('Error loading Wards', ''));
            });
        }
    });

    // Handle form submission
    $('#applicantForm').submit(function(e) {
        e.preventDefault(); // Prevent default form submission
        const formData = $(this).serialize(); // Serialize form data
        console.log(formData); // Log the serialized form data

        $.post('/apply', formData, function(response) {
            alert(response.msg); // Show success message
            $('#applicantForm')[0].reset(); // Reset form after successful submission
            $('#wardDropdown').prop('disabled', true); // Disable ward dropdown after submission
            $('#lgaDropdown').prop('disabled', true); // Disable LGA dropdown after submission
        }).fail(function(xhr) {
            alert(xhr.responseJSON.msg); // Show error message
        });
    });
});
  </script>
